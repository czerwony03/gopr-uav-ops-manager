<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /

  # Do not rewrite _expo/* or assets/*
  RewriteCond %{REQUEST_URI} ^/_expo/ [NC,OR]
  RewriteCond %{REQUEST_URI} ^/assets/ [NC]
  RewriteRule ^ - [L]

  # Donâ€™t rewrite requests for existing files or directories
  RewriteCond %{REQUEST_FILENAME} -f [OR]
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]

  # Redirect everything else to index.html
  RewriteRule ^ index.html [L]
</IfModule>
